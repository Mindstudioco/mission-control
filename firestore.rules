rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /tasks/{taskId} {
      allow read: if true;
      allow write: if true;
    }
    match /agents/{agentId} {
      allow read: if true;
      allow write: if true;
    }
    match /activities/{activityId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
